{
  "name": "dev-productivity-suite",
  "version": "0.1.0",
  "description": "Dev Productivity Suite",
  "author": "Jared Miller",
  "homepage": ".",
  "private": true,
  "main": "build/electron.js",
  "type": "module",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.150.1",
    "xterm": "^5.1.0",
    "xterm-addon-fit": "^0.7.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.1.0",
    "@types/three": "^0.178.1",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "react-scripts": "^5.0.1",
    "wait-on": "^7.0.1"
  },
  "scripts": {
    "start": "GENERATE_SOURCEMAP=false npx react-scripts start",
    "start:clean": "NODE_OPTIONS='--no-deprecation' GENERATE_SOURCEMAP=false npx react-scripts start",
    "build": "npx react-scripts build",
    "test": "npx react-scripts test",
    "eject": "npx react-scripts eject",
    "electron:dev": "concurrently \"npx react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "node scripts/clean-build.mjs && npm run build && cp main.js build/electron.js && cp preload.js build/preload.js && electron-builder && node scripts/verify-build.mjs",
    "electron:build:dirty": "npm run build && cp main.js build/electron.js && cp preload.js build/preload.js && electron-builder",
    "electron:build:clean": "node scripts/clean-build.mjs && npm run electron:build:dirty && node scripts/verify-build.mjs",
    "electron:build:verify": "node scripts/verify-build.mjs",
    "cleanup": "node scripts/cleanup-space.mjs",
    "build:info": "node scripts/build-info.mjs",
    "electron:prod": "npm run build && cp main.js build/electron.js && cp preload.js build/preload.js && npx electron .",
    "electron:package": "npm run build && cp main.js build/electron.js && cp preload.js build/preload.js && electron-builder",
    "electron:clean": "rimraf build dist",
    "electron:run": "electron .",
    "electron:start": "concurrently \"cross-env BROWSER=none NODE_OPTIONS='--no-deprecation' GENERATE_SOURCEMAP=false npx react-scripts start\" \"wait-on http://localhost:3000 && electron . --no-devtools\"",
    "electron:start:clean": "concurrently \"cross-env BROWSER=none NODE_OPTIONS='--no-deprecation --no-warnings' GENERATE_SOURCEMAP=false npx react-scripts start\" \"wait-on http://localhost:3000 && electron . --no-devtools\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.yourcompany.dev-productivity-suite",
    "productName": "Dev Productivity Suite",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "identity": null,
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64"]
        },
        {
          "target": "zip",
          "arch": ["arm64"]
        }
      ]
    },
    "dmg": {
      "background": null,
      "title": "${productName} ${version}",
      "icon": null,
      "iconSize": 80,
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      },
      "format": "ULFO"
    },
    "afterSign": "scripts/notarize.cjs",

    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
